<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="quejas.css">
    <link rel="stylesheet" href="/global.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <title>Quejas y sugerencias</title>
</head>

<body>
    <!--navbar-->
    <%- include('./partials/_header'); %>
        <!--linea roja-->
        <div class="navbar-after">
            <a class="after"></a class></a>
        </div>

<main>
        <div class="container-fluid rectangulo" id="sec1">
            <div class="container my-1 rectangulo">
                <h1 class="titulo">SUGERENCIAS </h1>
            </div>
        </div>

        <!--formulario-->
            <form method="post" id="biit" class="registro" onsubmit="event.preventDefault(); validateForm()">
                    <div class="container">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="name@example.com">
                        <small class="error"></small>
                    </div>
                    <div class="container mb-3">
                        <label for="asunto" class="form-label">Add subject</label>
                        <textarea id="subject" class="form-control" placeholder="Asunto"></textarea>
                        <small class="error"></small>
                    </div>
                    <div class="container mb-3">
                        <label for="message" class="form-label">Complaints and suggestions</label>
                        <textarea class="form-control" id="message" placeholder="Escriba aqui su queja o sugerencia" rows="3"></textarea>
                        <small class="error"></small>
                    </div>
                    <div class="container mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="gridCheck">
                        <label class="form-check-label" for="gridCheck"> I'm not a robot</label>
                    </div>
                    <div class="container mb-3 form-check">
                    <button id="boton" type="submit"class="btn btn-danger btn-lg ">Send</button>
                    <p id="success"></p>
                </div>
                    <br>
            </form>
    </main>
        <%- include('./partials/_footer'); %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                crossorigin="anonymous"></script>
            <!--Js de boostrap-->
            <script src="/js/bootstrap.bundle.min.js"></script>
            <script src="/quejas.js"></script>

</body>

</html>