<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">  
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/global.css">
  <link rel="stylesheet" href="/login.css">
</head>

<body>

  <!--Header-->
  <%- include('./partials/_header'); %>
  <div>
    <div class="navbar-after">
      <a class="after"></aclass></a>
    </div>
  </div>

  <!--Main de la página-->
  <main>
    <section id="cuadrado" class="container my-5">
      <div id="logo">
        <img src="https://i.ibb.co/T4WdzWN/bit.png" height="150" width="100" alt="bit" />
        <br>
        <h2 class="nombre-empresa">LOGIN</h2>
        <!--Linea divisora-->
        <div>
          <div class="navbar-after">
            <a class="after"></aclass></a>
          </div>
        </div>
      </div>
    </section>
    <section id="login2" class="container">
      <form action="" method="POST" id="box-form" >
        <div class="form-group my-5">
          <label id="label" for="inputEmail4"><h3>Email</h3></label>
          <input  type="email" class="form-control" id="inputEmail4" placeholder="Email" required>
        </div>
        <div class="form-group my-5">
          <label id="label" for="inputPassword"> <h3>Password</h3> </label>
          <input  type="password" class="form-control" id="inputPassword" placeholder="Password"  required>
        </div>
        <div class="form-group">
          <label id="label" class="form-check-label"><input type="checkbox"> Remember me</label>
        </div>
        <button id="button" type="button" class="btn btn-primary my-3 mx-4" onclick="entrar()">Sign in</button>
        <a href="/registro"  id="button" type="submit"   class="btn btn-primary my-3 mx-4">Regístrate</a>
      </form>
    </section>
  </main>
  <br>
  <!--Footer-->
  <%- include('./partials/_footer'); %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
  <!--Js de boostrap-->
  <script src="/js/bootstrap.bundle.min.js"></script>
  <!--Script interno-->
  <script src="/login.js"></script>
  
</body>

</html>